generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum DicomModality {
  CR
  CT
  DX
  MG
  MR
  NM
  OT
  PT
  RF
  US
  XA
}

model Patient {
  id          String    @id @default(uuid())
  name        String
  document    String    @unique
  email       String
  phone       String
  exams       Exam[]    @relation("PatientExams")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([name])
  @@index([document])
}

model Exam {
  id              String         @id @default(uuid())
  patientId       String
  patient         Patient        @relation("PatientExams",fields: [patientId], references: [id])
  dicomModality   DicomModality
  examDate        DateTime
  idempotencyKey  String         @unique
  createdAt       DateTime       @default(now())

  @@index([patientId])
  @@index([idempotencyKey])
  @@index([examDate]) 
}